$light   = 'HpLight'
$regular = 'HpRegular'
$bold    = 'HpBold'
$color   = #00B3E3
flexCenter()
	display flex
	display -webkit-flex
	align-items center
flexStart()
	display flex
	display -webkit-flex
	align-items start
flexEnd()
	display flex
	display -webkit-flex
	align-items flex-end
transitionOpacity()
	-webkit-transition opacity .3s linear
	-moz-transition opacity .3s linear
	-ms-transition opacity .3s linear
	-o-transition opacity .3s linear
	transition opacity .3s linear
transitionWidth()
	-webkit-transition width .3s linear
	-moz-transition width .3s linear
	-ms-transition width .3s linear
	-o-transition width .3s linear
	transition width .3s linear
transitionMaxWidth()
	-webkit-transition max-width .3s linear
	-moz-transition max-width .3s linear
	-ms-transition max-width .3s linear
	-o-transition max-width .3s linear
	transition max-width .3s linear
transitionBgColor()
	-webkit-transition background-color .3s linear
	-moz-transition background-color .3s linear
	-ms-transition background-color .3s linear
	-o-transition background-color .3s linear
	transition background-color .3s linear
transitionTransform()
	-webkit-transition transform .3s linear
	-moz-transition transform .3s linear
	-ms-transition transform .3s linear
	-o-transition transform .3s linear
	transition transform .3s linear
absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
relative()
	position relative
	top 0
	left 0
	right 0
	bottom 0
body
	margin 0
	padding 0
	overflow hidden
	font-family $regular
	color #FFFFFF
	background-color #FFFFFF
img
	width 100%
p
	margin 0
	font-size 18px
label
	font-weight 100
.js-section
	position relative
	padding 40px 20px
.js-flex
	flexCenter()
	justify-content center
.js-flex--start
	flexStart()
	justify-content center
.js-height
	height 100vh
	.js-fondo
		height 100vh
		&:BEFORE
			height 100vh
.js-header
	transitionAll()
	position fixed
	top 0
	width 100%
	z-index 5
	padding 10px 25px
	color #FFFFFF
	background-color $color
	img
		width 100%
		max-width 50px
		margin-right 10px
	.js-header--left
		flexCenter()
		width 100%
		max-width 300px
		justify-content flex-start
	.js-header--right
		flexCenter()
		width 100%
		justify-content flex-end
		text-align right
.js-container
	transitionMaxWidth()
	height 100%
	width 100%
	max-width 1350px
	margin auto
	color #757575
.js-input
	margin 10px 0
	.form-control
		padding 6px 15px
		height 42px
		font-size 15px
		font-family $regular
		color #000000
.js-select
	&.js-standar
		margin 5px 0
		.bootstrap-select
			width 100% !important
			.btn-default
				background-color #FFFFFF
				color #757575
				height 46px
				border-radius 0
.js-button
	border-radius 5px
	text-transform initial
	color #FFFFFF
	font-family $regular
	font-size 16px	
.js-login
	width 100%
	max-width 400px
	margin auto
	color #000000
	text-align center
	h2
		color #576274
		font-size 28px
		line-height 30px
		margin 20px 0
	img
		max-width 300px
		margin-top 20px
	a
		margin-left 15px
		color #757575
	.js-button--login
		background-color #F15F43
		width 100%
		max-width 100px
	.js-radio
		margin-left 15px
		color #757575
.js-title
	text-align center
	border-bottom 3px solid #A4A1A1
	padding 20px 0
	h2
		font-size 28px
		line-height 30px
		margin 10px 0
		font-family $regular
	p
		font-size 16px
		line-height 16px
.js-template
	border 1px solid #a4a1a1
	padding 20px
	text-align center
	.js-card
		width 100%
		max-width 200px
		display inline-block
		border 1px solid #BEE0F6
		margin 2px
/*SCROLL*/
::-webkit-scrollbar
	width 8px
	height 5px
::-webkit-scrollbar-track
	background-color transparent
	border-radius 10px
::-webkit-scrollbar-thumb
	background-color #AAAAAA
	border-radius 10px
@media (max-width : 600px)
	.js-login
		img
			max-width 200px